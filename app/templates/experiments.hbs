<div id="datasets" class="section scrollable-container">
  <div class="fixed-top section-header section-brand-light content-pad">
    <h2></h2>
  </div>
  <div class="protein-detail-content scrollable-content">
    <div class="content-pad-2x copy-container">
      <section class="pure-g">
        <div class="pure-u-1">
          <h2>Experiments</h2>
        </div>
      </section>
      <section class="pure-g">
        <div class="pure-u-1">
          <table class="pure-table pure-table-horizontal pure-table-striped table-full-width">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
            {{#each set in content itemController="experiment"}}
              <tr>
                <td>{{set.id}}</td>
                <td>
                  {{#link-to 'experiment' set.id}}
                    {{set.name}}
                  {{/link-to}}
                </td>
                <td>{{set.formattedDate}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</div>